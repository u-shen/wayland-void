# =============================================================================== #
# Profile:                                                                        #
# =============================================================================== #
if [ -n "$BASH_VERSION" ]; then
	if [ -f "$HOME/.bashrc" ]; then
		. "$HOME/.bashrc"
	fi
fi
# =============================================================================== #
# If running from tty Start Compositor:                                           #
# =============================================================================== #
[ "$(tty)" = "/dev/tty1" ] && exec dbus-run-session river >/dev/null 2>&1
