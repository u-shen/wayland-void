// # =============================================================================== #
// # Zed Configurations:                                                             #
// # =============================================================================== #
{
  // # =============================================================================== #
  // # General:                                                                        #
  // # =============================================================================== #
  "vim_mode": true,
  "auto_update": false,
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400,
  "preferred_line_length": 80,
  "buffer_font_size": 12,
  "ui_font_size": 14,
  "tab_size": 2,
  "vertical_scroll_margin": 0,
  "hard_tabs": false,
  "cursor_blink": true,
  "restore_on_file_reopen": true,
  "restore_on_startup": "none",
  "when_closing_with_no_tabs": "close_window",
  "on_last_window_closed": "quit_app",
  "use_system_path_prompts": false,
  "extend_comment_on_newline": false,
  "confirm_quit": false,
  "hover_popover_enabled": true,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": false,
  "relative_line_numbers": false,
  "wrap_guides": [],
  "bracket_pairing": "always",
  "formatter": "prettier",
  "linter": "eslint",
  "format_on_save": "on",
  // # =============================================================================== #
  // # AutoSave:                                                                       #
  // # =============================================================================== #
  "autosave": "on_focus_change",
  "autosave_delay": 1500,
  "autosave_on_focus_change": true,
  "autosave_on_window_change": true,
  "autosave_on_build": true,
  "autosave_on_build_delay": 1500,
  "autosave_on_build_events": ["build", "run", "debug"],
  "autosave_on_build_events_delay": 1500,
  // # =============================================================================== #
  // # Completions:                                                                    #
  // # =============================================================================== #
  "show_completions_on_input": true,
  "show_completion_documentation": false,
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "completions": {
    "words": "disabled",
    "lsp": true,
    "lsp_fetch_timeout_ms": 0,
    "lsp_insert_mode": "replace_suffix"
  },
  // # =============================================================================== #
  // # VIM:                                                                            #
  // # =============================================================================== #
  "vim": {
    "default_mode": "normal",
    "toggle_relative_line_numbers": false,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": false,
    "highlight_on_yank_duration": 100,
    "enable_vim_sneak": true
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  // # =============================================================================== #
  // # Hints:                                                                          #
  // # =============================================================================== #
  "inlay_hints": {
    "enabled": false,
    "typeHints": true,
    "parameterHints": true,
    "chainingHints": true
  },
  // # =============================================================================== #
  // # UI:                                                                             #
  // # =============================================================================== #
  "features": {
    "copilot": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "small"
  },
  "tabs": {
    "show_diagnostics": "errors",
    "close_position": "right",
    "git_status": false
  },
  "toolbar": {
    "selections_menu": false,
    "breadcrumbs": false,
    "quick_actions": false
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Everblush"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed",
    "background_coloring": "disabled",
    "active_line_width": 1,
    "line_width": 1
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "scrollbar": {
    "show": "never",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  // # =============================================================================== #
  // # FileType:                                                                       #
  // # =============================================================================== #
  "file_types": {
    "*.mdx": ["markdown"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  // # =============================================================================== #
  // # Terminal:                                                                       #
  // # =============================================================================== #
  "terminal": {
    "shell": { "program": "nu" },
    "alternate_scroll": "off",
    "working_directory": "first_project_directory",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "env": { "EDITOR": "zed --wait" },
    "font_family": "JetBrainsMonoNL Nerd Font",
    "font_features": null,
    "font_size": null,
    "option_as_meta": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  // # =============================================================================== #
  // # Git:                                                                            #
  // # =============================================================================== #
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoFetchInterval": 300,
    "autoFetchOnFocus": true,
    "autoFetchOnWindowChange": true,
    "autoFetchOnBuild": true,
    "git_status": true,
    "autoFetchOnBuildEvents": ["build", "run", "debug"],
    "autoFetchOnBuildEventsDelay": 1500,
    "autoFetchOnBuildDelay": 1500,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  // # =============================================================================== #
  // # prettier:                                                                       #
  // # =============================================================================== #
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf"
  },
  // # =============================================================================== #
  // # Eslint:                                                                         #
  // # =============================================================================== #
  "eslint": {
    "enabled": true,
    "autoFixOnSave": true,
    "autoFixOnFormat": true,
    "autoFixOnFormatDelay": 1500
  },
  // # =============================================================================== #
  // # Languages:                                                                      #
  // # =============================================================================== #
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
      "show_edit_predictions": true,
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      },
      "format_on_save": "on"
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
      "formatter": "prettier",
      "prettier": {
        "allowed": true
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      },
      "format_on_save": "on"
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
      "formatter": "prettier",
      "prettier": {
        "allowed": true
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      },
      "format_on_save": "on"
    },
    "HTML": {
      "prettier": {
        "allowed": true
      }
    },
    "CSS": {
      "prettier": {
        "allowed": true
      }
    },
    "SCSS": {
      "prettier": {
        "allowed": true
      }
    },
    "Markdown": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "TOML": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "YAML": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "JSON": {
      "tab_size": 2,
      "preferred_line_length": 120,
      "formatter": "prettier"
    },
    "JSONC": {
      "tab_size": 2,
      "preferred_line_length": 120,
      "formatter": "prettier"
    }
  },
  // # =============================================================================== #
  // # LSP:                                                                            #
  // # =============================================================================== #
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },
  // # =============================================================================== #
  // # Extension:                                                                      #
  // # =============================================================================== #
  "auto_install_extensions": {
    "html": false
  }
}