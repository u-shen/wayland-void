// # =============================================================================== #
// # Code Configurations:                                                            #
// # =============================================================================== #
{
  // # =============================================================================== #
  // # Editor Settings:                                                                #
  // # =============================================================================== #
  "editor.fontFamily": "JetBrainsMono Nerd Font, Geist Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.snippetSuggestions": "bottom",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.scrollBeyondLastLine": false,
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.comments.ignoreEmptyLines": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggestSelection": "recentlyUsed",

  // # =============================================================================== #
  // # Editor: Silence Visual Noise:                                                   #
  // # =============================================================================== #
  "editor.matchBrackets": "never",
  "editor.colorDecorators": false,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.showFoldingControls": "never",
  "editor.glyphMargin": false,
  "editor.folding": false,
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": false,
  "editor.hover.delay": 1500,
  "editor.hover.enabled": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  // # =============================================================================== #
  // # Workbench Settings:                                                             #
  // # =============================================================================== #
  "workbench.desktop.sideBar.labelFontFamily": "JetBrainsMono Nerd Font, Geist Mono, Fira Code",
  "workbench.experimental.customSidebarFontFamily": "JetBrainsMono Nerd Font, Geist Mono, Fira Code",
  "workbench.colorTheme": "Everblush",
  "workbench.editor.restoreViewState": false,
  "workbench.startupEditor": "none",
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.decorations.badges": false,
  "workbench.list.fastScrollSensitivity": 1,

  // # =============================================================================== #
  // # Workbench: Silence Visual Noise:                                                #
  // # =============================================================================== #
  "workbench.tips.enabled": false,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.showTabs": "none",
  "workbench.editor.tabActionCloseVisibility": false,

  // # =============================================================================== #
  // # breadcrumbs:                                                                    #
  // # =============================================================================== #
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.showNull": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showTypeParameters": false,

  // # =============================================================================== #
  // # Window Settings:                                                                #
  // # =============================================================================== #
  "window.title": " ",
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "window.restoreFullscreen": false,
  "window.newWindowDimensions": "maximized",
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",

  // # =============================================================================== #
  // # Files Settings:                                                                 #
  // # =============================================================================== #
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": false,
  "files.restoreUntitledEditors": false,

  // # =============================================================================== #
  // # Terminal Settings:                                                              #
  // # =============================================================================== #
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.profiles.windows": {
    "nu": {
      "path": "nu.exe",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "nu",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.localEchoEnabled": "on",
  "terminal.integrated.localEchoExcludePrograms": [],
  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.minimumContrastRatio": 3,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "terminal.integrated.tabs.showActions": "never",
  "terminal.integrated.tabs.showActiveTerminal": "never",
  "terminal.integrated.wordSeparators": "`~!@#$%^&*()-=+[]{}\\|;:'\",.<>/?_─‘’",
  "terminal.integrated.shellIntegration.showCommandGuide": false,

  // # =============================================================================== #
  // # Debug Settings:                                                                 #
  // # =============================================================================== #
  "debug.console.fontSize": 12,

  // # =============================================================================== #
  // # Source Control:                                                                 #
  // # =============================================================================== #
  "scm.diffDecorations": "gutter",
  "scm.diffDecorationsGutterPattern": {
    "added": true,
    "modified": true
  },

  // # =============================================================================== #
  // # Format & Autocomplete:                                                          #
  // # =============================================================================== #
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // # =============================================================================== #
  // # VIM Configuration:                                                              #
  // # =============================================================================== #
  "vim.leader": "<space>",
  "vim.enableNeovim": true,
  "vim.relativenumber": false,
  "vim.startInInsertMode": false,
  "vim.useSystemClipboard": true,
  "vim.neovimUseConfigFile": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#8C977D",
  "vim.highlightedyank.textColor": "#151515",
  "vim.highlightedyank.duration": 150,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.nohlsearch": true,
  "vim.easymotion": false,
  "vim.sneak": true,
  "vim.handleKeys": {
    "<C-a>": true,
    "<C-f>": true,
    "<C-d>": true,
    "<C-x>": true,
    "<C-v>": true,
    "<C-c>": false,
    "<C-y>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // # =============================================================================== #
  // # Search:                                                                         #
  // # =============================================================================== #
  "search.mode": "reuseEditor",
  "search.collapseResults": "alwaysCollapse",
  "search.exclude": { "**/.idea": true, "**/Cargo.lock": true },
  "search.quickOpen.includeSymbols": true,
  "search.searchOnTypeDebouncePeriod": 0,
  "search.seedOnFocus": true,
  "search.seedWithNearestWord": true,
  "search.smartCase": true,
  "search.sortOrder": "countDescending",

  // # =============================================================================== #
  // # Git:                                                                            #
  // # =============================================================================== #
  "git.decorations.enabled": true,
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": "all",
  "git.autoStash": true,
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.followTagsWhenSync": true,
  "git.logLevel": "Warning",
  "git.mergeEditor": true,
  "git.postCommitCommand": "sync",
  "git.rebaseWhenSync": true,
  "git.timeline.showUncommitted": true,
  "git.untrackedChanges": "separate",

  // # =============================================================================== #
  // # UI Elements:                                                                    #
  // # =============================================================================== #
  "breadcrumbs.enabled": false,
  "problems.decorations.enabled": false,
  "explorer.decorations.colors": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.sortOrder": "alphabetical",

  // # =============================================================================== #
  // # Application Settings:                                                           #
  // # =============================================================================== #
  "update.mode": "none",
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true
}
